{
  "name": "@hangtime/climbing-boards",
  "version": "1.0.0",
  "description": "Auto-updating GeoJSON dataset of Aurora Climbing board locations: Kilter, Tension, Grasshopper, Decoy, So iLL, Touchstone and Aurora.",
  "type": "module",
  "main": "geojson/combined.geojson",
  "files": [
    "geojson",
    "interfaces",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "climbing",
    "geojson",
    "moonboard",
    "kilter-board",
    "tension-board",
    "grasshopper-board",
    "decoy-board",
    "so-ill",
    "touchstone",
    "aurora",
    "12climb",
    "training-board",
    "system-board",
    "bouldering",
    "climbing-gyms",
    "locations"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Stevie-Ray/hangtime-climbing-boards.git"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "scrape": "node --experimental-strip-types scrape-locations.ts",
    "convert": "node --experimental-strip-types convert-geojson.ts",
    "combine": "node --experimental-strip-types combine-geojson.ts",
    "build": "npm run scrape && npm run convert && npm run combine",
    "dev": "tsc --watch"
  },
  "author": "Stevie-Ray Hartog <mail@stevie-ray.nl>",
  "license": "Unlicense",
  "dependencies": {
    "@turf/turf": "^7.2.0",
    "axios": "^1.13.1",
    "dotenv": "^17.2.3",
    "user-agents": "^1.1.669"
  },
  "devDependencies": {
    "@types/geojson": "^7946.0.16",
    "@types/node": "^22.18.13",
    "@types/user-agents": "^1.0.4",
    "typescript": "^5.9.3"
  }
}
